{
    "version": 6,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 26,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "default",
        "binaryDir": "${sourceDir}/build",
        "installDir": "${sourceDir}/install",
        "generator": "Ninja Multi-Config",
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "cacheVariables": {
          "FETCHCONTENT_BASE_DIR": "${sourceDir}/external",
          "CMAKE_MODULE_PATH": "${sourceDir}/cmake",
          "CMAKE_CXX_STANDARD": "26",
          "CMAKE_C_STANDARD": "23",
          "CMAKE_CONFIGURATION_TYPES": "Debug;Release;",
          "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>",
          "INSTALL_AL": "OFF",
          "AL_TESTS": "OFF"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "release",
        "description": "Build TONESHELL and Test 4 targets with release configuration",
        "configurePreset": "default",
        "inheritConfigureEnvironment": true,
        "configuration": "Release",
        "targets": [
            "shellcode",
            "wsdapi",
            "test4shellcode",
            "gflagsui",
            "test4",
            "toneshell-test"
        ]
      },
      {
        "name": "debug",
        "description": "Build TONESHELL and Test 4 targets with debug configuration",
        "configurePreset": "default",
        "inheritConfigureEnvironment": true,
        "configuration": "Debug",
        "targets": [
            "shellcode",
            "wsdapi",
            "test4shellcode",
            "gflagsui",
            "test4",
            "toneshell-test"
        ]
      }
    ],
    "testPresets": [
      {
        "name": "debug",
        "configurePreset": "default",
        "configuration": "Debug",
        "inheritConfigureEnvironment": true
      },
      {
        "name": "release",
        "configurePreset": "default",
        "configuration": "Release",
        "inheritConfigureEnvironment": true
      }
    ],
    "workflowPresets": [
      {
        "name": "cicd-debug",
        "description": "Build all TONESHELL and test 4 debug targets",
        "steps": [
          {
            "type": "configure",
            "name": "default"
          },
          {
            "type": "build",
            "name": "debug"
          },
          {
            "type": "test",
            "name": "debug"
          }
        ]
      },
      {
        "name": "cicd-release",
        "description": "Build all TONESHELL and test 4 release targets",
        "steps": [
          {
            "type": "configure",
            "name": "default"
          },
          {
            "type": "build",
            "name": "release"
          },
          {
            "type": "test",
            "name": "release"
          }
        ]
      }
    ]
  }
